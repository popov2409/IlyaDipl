<UserControl x:Class="IlyaDipl.View.RectangleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IlyaDipl.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="60" PreviewMouseDown="Base_MouseDown" MouseMove="Base_MouseMove" HorizontalAlignment="Left" VerticalAlignment="Top">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Name="DeleteElement" Header="Удалить" Click="DeleteElement_OnClick"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid Background="Transparent">
            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="Yellow" Stroke="Red" StrokeThickness="3"></Rectangle>
        <TextBlock Name="NameTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"  TextAlignment="Center" FontSize="12"/>
    </Grid>
</UserControl>
